<div class="reply_box">
  <div class="reply show_reply">
    <p style="min-height: 120px;" class="reply reply_message"><%=@reply.message%></p>
  </div>
</div>
<br>
<% if logged_in? && current_user.id == @reply.user_id%>
  <a href="/forums/<%=@cat.slug%>/<%=@post.id%>/replies/<%=@reply.id%>/edit">Edit Reply</a>
<% end %>