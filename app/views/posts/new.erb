<head>
<link rel="stylesheet" type="text/css" href="/stylesheets/posts/new.css">
</head>
<% if @show %>
<div class="post_box">
<form action="/posts" method="POST">
<input class="post" id="title" type="text" name="post[title]" placeholder="Title"/><br>

<label for="content">Post Content:</label><br>
<textarea class="post" id="content" name="post[content]" rows=10 cols=40>
</textarea>
<input type="hidden" name="post[user_id]" value="<%=@user.id%>"/><br>
<input class="post" id="post_submit" type="submit" value="Create Post"/>
</form>
</div>
<% else %>
<h2> Please login. </h2>
<% end %>
