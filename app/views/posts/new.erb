<% if @show %>
<form action="/posts" method="POST">
<input type="text" name="post[title]" placeholder="Title"/>
<input type="text" name="post[content]" placeholder="Content"/>
<input type="hidden" name="post[user_id]" value="<%=@user.id%>"/>
<input type="submit" value="Create Post"/>
<% else %>
<h2> Please login. </h2>
<% end %>
</form>