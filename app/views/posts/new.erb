<head>
<link rel="stylesheet" type="text/css" href="/stylesheets/posts/new.css">
</head>
<% if logged_in? %>
<div class="post_box">
<form action="/forums/<%=@cat.slug%>" method="POST">
<textarea class="post" id="title" name="post[title]" placeholder="Title" rows=1 cols=50 required>
</textarea><br>
<textarea class="post" placeholder="Post Content" id="content" name="post[content]" rows=10 cols=100 required>
</textarea>
<input type="hidden" name="post[category_id]" value="<%=@cat.id%>"/>
<input class="post" id="post_submit" type="submit" value="Create Post"/>
</form>
</div>
<% else %>
<h2> Please login. </h2>
<% end %>
