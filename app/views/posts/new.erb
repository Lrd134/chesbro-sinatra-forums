<% if logged_in? %>
<div class="post_box">
<form action="/forums/<%=@cat.slug%>" method="POST">
<textarea class="submit_text" id="title" name="post[title]" placeholder="Title" rows=1 cols=50 required>
</textarea><br>
<textarea class="submit_text" placeholder="Post Content" id="content" name="post[content]" rows=10 cols=100 required>
</textarea>
<input type="hidden" name="post[category_id]" value="<%=@cat.id%>"/><br>
<input class="submit_text" id="post_submit" type="submit" value="Create Post"/>
</form>
</div>
<% else %>
<h2> Please login. </h2>
<% end %>
