<head>
<link rel="stylesheet" type="text/css" href="/stylesheets/posts/show.css">
</head>
<% if current_user.id == @post.user_id %>
<div id="edit_button">
<a href="/forums/<%=@cat.slug%>/<%=@post.id%>/edit">Edit Post</a>
</div>
</form>
<% end %>
<h1 id="show_post_title"><%=@post.title%></h1>
<div class="post_box">
<p id="show_post_content"><%=@post.content%></p>
</div>
<a href="/forums/<%=@cat.slug%>/<%=@post.id%>/reply">New Reply</a>
<% if @replies %>
  <% @replies.each do | reply | %>
    <div class="reply_box">
      <p class="reply reply_timestamp"><%=reply.created_at.localtime.ctime%></p>
      <p class="reply reply_user"> <a href="/forums/<%=@cat.slug%>/<%=@post.id%>/replies/<%=reply.id%>">Reply</a> from <a href="/users/<%=reply.user_id%>"><%=username(reply.user_id)%></a></p>
      <p class="reply reply_message"><%=reply.message%></p>
    </div>
  <% end %>
<% end %>